---
// src/layouts/BaseLayout.astro
export interface Props {
    title?: string;
    metaDescription?: string | null;
    metaKeywords?: string | null;
    backgroundColor?: string;
    pageType?: "news" | "projects" | "about" | "contact";
}

const {
    title = "News - ACETONE GRAPHIK studio design indépendant",
    metaDescription = "édition, digital, conception rédaction, événementiel, motion design le studio de graphisme développe des projets sur des supports actuels",
    metaKeywords = "design, graphism",
    backgroundColor,
    pageType = "news",
} = Astro.props;

import Header from "../components/Header.astro";
---

<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="keywords" content={metaKeywords} />
        <meta name="description" content={metaDescription} />
        <meta name="title" content={title} />
        <title>{title}</title>
        <link rel="stylesheet" href="/workspace/css/application.css" />
        <script is:inline src="/workspace/js/lib/iscroll.js"></script>
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    </head>
    <body
        class={`page-${pageType}`}
        style={`background-color: ${backgroundColor}`}
    >
        <script is:inline>
            function addLoadEvent(func) {
                var oldonload = window.onload;
                if (typeof window.onload != "function") {
                    window.onload = func;
                } else {
                    window.onload = function () {
                        if (oldonload) {
                            oldonload();
                        }
                        func();
                    };
                }
            }
        </script>

        <Header />

        <slot />

        <div id="sizeshandler"></div>
        <div id="scrollhandler"></div>
        <script is:inline src="/workspace/js/app.js"></script>
        <script is:inline>
            addLoadEvent(function () {
                app.core.startall();
            });
        </script>
        <script is:inline>
            (function (i, s, o, g, r, a, m) {
                i["GoogleAnalyticsObject"] = r;
                (i[r] =
                    i[r] ||
                    function () {
                        (i[r].q = i[r].q || []).push(arguments);
                    }),
                    (i[r].l = 1 * new Date());
                (a = s.createElement(o)), (m = s.getElementsByTagName(o)[0]);
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m);
            })(
                window,
                document,
                "script",
                "//www.google-analytics.com/analytics.js",
                "ga",
            );
            ga("create", "UA-63644854-1", "auto");
            ga("send", "pageview");
        </script>
    </body>
</html>
